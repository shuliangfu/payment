{
  "version": "1.0.0",
  "license": "MIT",
  "tasks": {
    "build": "forge build",
    "test": "forge test",
    "deploy": "deno run -A deploy.ts"
  },
  "imports": {
    "@dreamer/foundry": "jsr:@dreamer/foundry@^1.6.2",
		"@dreamer/test": "jsr:@dreamer/test@1.0.0-beta.23"
  },
  "nodeModulesDir": "auto",
  "fmt": {
    "files": {
      "include": ["**/*.ts", "**/*.js"]
    },
    "options": {
      "indentWidth": 2,
      "lineWidth": 100,
      "useTabs": false
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any"]
    },
    "include": ["deploy/**/*.ts", "tests/**/*.ts"]
  },
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "noImplicitAny": false
  },
  "allowScripts": {
    "allow": [],
    "deny": ["npm:esbuild@0.27.2", "npm:puppeteer@24.36.0"]
  }
}
